# 1) REQUIRED: Telegram + ServiceDesk connection
# ============================================================

# Telegram
TELEGRAM_BOT_TOKEN=8190633610:AAHO2mlFnLaXftjrdjnnVzTEOWMlSzgbg9U

# Service Desk API
SD_BASE_URL=http://10.200.200.1:8081
SD_API_PREFIX=/api/v1
HTTP_TIMEOUT_SECONDS=15


# ============================================================
# 2) REQUIRED: Local database
# ============================================================

SQLITE_PATH=./data/bot.sqlite3


# ============================================================
# 3) Runtime / logging
# ============================================================

APP_ENV=dev
LOG_LEVEL=INFO
DRY_RUN=false


# ============================================================
# 4) Main worker intervals (seconds / minutes)
# ============================================================

# PollerWorker (tracks tickets_current status changes)
TICKETS_POLL_INTERVAL_SECONDS=30

# ExecutorSyncWorker (sync assigned executor tickets)
EXECUTOR_SYNC_INTERVAL_SECONDS=30

# General worker tick / cleanup
POLL_INTERVAL_SECONDS=120
CLEANUP_INTERVAL_SECONDS=300
SESSION_TTL_MINUTES=60


# ============================================================
# 5) Auto re-login (token refresh)
# ============================================================

REAUTH_ENABLE=true
REAUTH_ON_STARTUP=true

# Run daily at this time (HH:MM)
REAUTH_TIME=02:00

# How often the reauth thread checks the clock (seconds)
REAUTH_CHECK_SECONDS=60


# ============================================================
# 6) Done tickets cleanup (history retention)
# ============================================================

DONE_RETENTION_DAYS=30

# schedule: 0=Mon ... 6=Sun
DONE_CLEANUP_WEEKDAY=6

# hour window (inclusive)
DONE_CLEANUP_HOUR_START=1
DONE_CLEANUP_HOUR_END=5

DONE_CLEANUP_VACUUM=true


# ============================================================
# 7) Front UI (local admin panel)
# ============================================================

FRONT_ENABLE=true
FRONT_HOST=0.0.0.0
FRONT_PORT=8010
FRONT_SQLITE_PATH=./data/bot.sqlite3
